{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "laundry",
  "version": "0.1.2",
  "identifier": "com.tauri-local.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:8090",
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build:prod"
  },
  "app": {
    "windows": [
      {
        "title": "laundry",
        "width": 2160,
        "height": 1080,
        "resizable": true,
        "fullscreen": false,
        "decorations": false
      }
    ],
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": [
          "*/**"
        ]
      },
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost"
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "windows": {
      "wix": {
        "language": [
          "en-US"
        ]
      }
    },
    "resources": [
      "config.yml",
      "scripts/",
      "MSYH.TTC",
      "images/"
    ],
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDY1MENBMEIwOEUzM0Q1RApSV1JkUGVNSUM4cFFCcWNDSTFKZm9pMFdOc1k1WXZSLzBkUlJZL3lDY0xrRHk5K3h0R2w4THJuLwo=",
      "endpoints": [
        "https://github.com/Xu-Mj/laundry/releases/latest/download/latest.json"
      ],
      "requestConfig": {
        "headers": {
          "Authorization": "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",
          "User-Agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36"
        }
      },
      "windows": {
        "installMode": "passive"
      }
    }
  }
}