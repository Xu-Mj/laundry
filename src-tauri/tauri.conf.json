{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "laundry",
  "version": "0.1.0",
  "identifier": "com.tauri-local.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:8090",
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build:prod"
  },
  "app": {
    "windows": [
      {
        "title": "laundry",
        "width": 2160,
        "height": 1080,
        "resizable": true,
        "fullscreen": false,
        "decorations": false
      }
    ],
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": [
          "*/**"
        ]
      },
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost"
    }
  },
  "bundle": {
    "windows": {
      "wix": {
        "language": [
          "en-US"
        ]
      }
    },
    "resources": [
      "config.yml",
      "database.db",
      "MSYH.TTC",
      "images/"
    ],
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}